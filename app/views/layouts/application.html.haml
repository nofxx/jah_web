      #sidebar
        #sidebar_top.sidebar_back
        #sidebar_background
        #sidebar_bottom.sidebar_back
        #sidebar_header.small_caps
          %span.has_hosts Active
          %span.no_hosts Inactive
        #hosts= sidebar
    #topmenu
      = [["Jah", "/"], ["Hosts", "/hosts"], ["History", "/history"],["Groups", "/groups"], ["Users", "/users"], ["Config", "/config"]].map { |l|  link_to l[0], l[1] }
    #queue= yield :queue
    = yield
    #host_info{:style => "display:none;"}
      #host_info_inner.small_caps
        #host_details
        #host_sleeping
    = yield :foot


