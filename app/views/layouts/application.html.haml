  = stylesheet_link_tag "reset", "app"
  = javascript_include_tag "jquery", "sparkline"
  = yield :head
%body
  #container
    #header
      #logo
    #disconnected.small_caps{:style => "display:none;"}
      .server_error
      Disconnected...
